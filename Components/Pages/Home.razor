@page "/legacy"
@layout HomeLayout
@rendermode InteractiveServer
@inject IWarehouseDataService DataService

<PageTitle>Palle Sortering</PageTitle>

<section class="home-shell">
    <div class="d-flex flex-wrap justify-content-between align-items-start gap-3 mb-3">
        <div>
            <h1 class="mb-1">Palle sortering</h1>
            <p class="text-muted mb-0">1) Registrer kolli 2) Flyt til foreslået palle 3) Scan pallelabel for bekræftelse.</p>
        </div>
        <div class="d-flex flex-wrap gap-2">
            <button id="scannerModeButton" class="btn btn-primary" @onclick="ToggleScannerMode">
                @(isSimpleScannerMode ? "Skift til avanceret visning" : "Skift til simpel scanner-visning")
            </button>
            @if (!isSimpleScannerMode)
            {
            <a id="exportCsvButton" class="btn btn-outline-success" href="/export/csv">Eksport CSV</a>
            <a id="exportExcelButton" class="btn btn-outline-success" href="/export/excel">Eksport Excel</a>
            <a id="backupDbButton" class="btn btn-outline-secondary" href="/backup/db">Backup DB</a>
            <button id="clearDatabaseButton" class="btn btn-outline-danger" @onclick="ShowClearDatabaseWarning">Ryd database</button>
            }
        </div>
    </div>

    <div class="row g-3 mb-3">
        <div class="col-12 col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body py-3">
                    <div class="text-muted small">Åbne paller</div>
                    <div class="fs-3 fw-semibold">@openPallets.Count</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body py-3">
                    <div class="text-muted small">Åbne kolli</div>
                    <div class="fs-3 fw-semibold">@openPallets.Sum(p => p.TotalQuantity)</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body py-3">
                    <div class="text-muted small">Afventer scan</div>
                    <div class="fs-3 fw-semibold">@entries.Sum(e => Math.Max(0, e.Quantity - e.ConfirmedQuantity))</div>
                </div>
            </div>
        </div>
    </div>

    @if (showClearDatabaseWarning)
    {
        <div class="alert alert-danger operator-alert operator-alert-danger d-flex flex-wrap align-items-center gap-2" role="alert">
            <strong>Advarsel:</strong> Dette sletter alle paller og registreringer permanent.
            <button id="clearConfirmButton" class="btn btn-sm btn-danger" @onclick="ClearDatabaseAsync">Ja, ryd database</button>
            <button id="clearCancelButton" class="btn btn-sm btn-outline-secondary" @onclick="CancelClearDatabase">Annuller</button>
        </div>
    }

    @if (!string.IsNullOrWhiteSpace(statusMessage))
    {
        <div class="alert @statusAlertCssClass operator-alert operator-status mb-3" role="alert">@statusMessage</div>
    }

    @if (isSimpleScannerMode)
    {
        <ScannerSimplePanel
            RegistrationForm="@registrationForm"
            ConfirmationForm="@confirmationForm"
            LastSuggestedPalletId="@lastSuggestedPalletId"
            OnRegisterColli="@RegisterColliAsync"
            OnConfirmMove="@ConfirmMoveAsync" />
    }
    else
    {
        <ScannerAdvancedPanel
            RegistrationForm="@registrationForm"
            ConfirmationForm="@confirmationForm"
            ScannerPreferences="@scannerPreferences"
            LastSuggestedPalletId="@lastSuggestedPalletId"
            OnRegisterColli="@RegisterColliAsync"
            OnConfirmMove="@ConfirmMoveAsync" />
    }

    @if (!isSimpleScannerMode)
    {
    <div class="row g-3">
        <div class="col-12 col-xxl-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center gap-2 bg-body">
                    <span class="fw-semibold">Åbne paller</span>
                    <span class="badge text-bg-secondary">@openPallets.Count stk</span>
                </div>
                <div class="table-responsive">
                    <table class="table align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Palle</th>
                                <th>Varenummer</th>
                                <th>Holdbarhed</th>
                                <th>Kolli</th>
                                <th class="text-end">Handling</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (openPallets.Count == 0)
                            {
                                <tr>
                                    <td colspan="5" class="text-muted">Ingen åbne paller endnu.</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var pallet in openPallets)
                                {
                                    <tr>
                                        <td class="fw-semibold">@pallet.PalletId</td>
                                        <td>@pallet.ProductNumber</td>
                                        <td>@pallet.ExpiryDate</td>
                                        <td>@pallet.TotalQuantity</td>
                                        <td class="text-end">
                                            <div class="d-inline-flex flex-wrap gap-1 justify-content-end">
                                                <a class="btn btn-sm btn-outline-primary" href="@($"/print-label/{pallet.PalletId}")" target="_blank">Label</a>
                                                <a class="btn btn-sm btn-outline-dark" href="@($"/print-pallet-contents/{pallet.PalletId}")" target="_blank">Indhold</a>
                                                <button class="btn btn-sm btn-primary" @onclick="() => CloseAndPrintContentsAsync(pallet.PalletId)">Luk + print</button>
                                                <button class="btn btn-sm btn-outline-secondary" @onclick="() => ClosePalletAsync(pallet.PalletId)">Luk</button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-12 col-xxl-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center bg-body">
                    <span class="fw-semibold">Seneste registreringer</span>
                    <button id="undoLastButton" class="btn btn-sm btn-outline-danger" disabled="@(entries.Count == 0)" @onclick="UndoLastAsync">Fortryd seneste</button>
                </div>
                <div class="table-responsive">
                    <table class="table align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Tid</th>
                                <th>Vare</th>
                                <th>Dato</th>
                                <th>Kolli</th>
                                <th>Palle</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (entries.Count == 0)
                            {
                                <tr>
                                    <td colspan="6" class="text-muted">Ingen registreringer endnu.</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var entry in entries)
                                {
                                    <tr>
                                        <td>@entry.Timestamp.ToLocalTime().ToString("HH:mm:ss")</td>
                                        <td>@entry.ProductNumber</td>
                                        <td>@entry.ExpiryDate</td>
                                        <td>@entry.Quantity</td>
                                        <td>@entry.PalletId</td>
                                        <td>
                                            @if (entry.ConfirmedMoved)
                                            {
                                                <span class="badge text-bg-success">Bekræftet (@entry.ConfirmedQuantity/@entry.Quantity)</span>
                                            }
                                            else
                                            {
                                                <span class="badge text-bg-warning">Afventer (@entry.ConfirmedQuantity/@entry.Quantity)</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm mt-3">
        <div class="card-header bg-body fw-semibold">Database restore</div>
        <div class="card-body">
            <div class="row g-2 align-items-end">
                <div class="col-12 col-md-8">
                    <label class="form-label">Vælg backupfil (.db)</label>
                    <InputFile OnChange="OnRestoreFileSelected" accept=".db,.sqlite,.sqlite3" />
                </div>
                <div class="col-12 col-md-4 d-grid">
                    <button id="restoreDbButton" class="btn btn-outline-warning" disabled="@(!CanRestoreDatabase)" @onclick="RestoreDatabaseAsync">Gendan database</button>
                </div>
            </div>
            @if (!string.IsNullOrWhiteSpace(selectedRestoreFileName))
            {
                <div class="small text-muted mt-2">Valgt fil: @selectedRestoreFileName</div>
            }
        </div>
    </div>
    }

</section>
