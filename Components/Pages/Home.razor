@page "/"
@layout HomeLayout
@rendermode InteractiveServer
@inject IWarehouseDataService DataService
@inject IJSRuntime JS

<PageTitle>Palle Sortering</PageTitle>

<section class="home-shell">
    <div class="d-flex flex-wrap justify-content-between align-items-start gap-3 mb-3">
        <div>
            <h1 class="mb-1">Palle sortering</h1>
            <p class="text-muted mb-0">1) Registrer kolli 2) Flyt til foreslået palle 3) Scan pallelabel for bekræftelse.</p>
        </div>
        <div class="d-flex flex-wrap gap-2">
            <a id="exportCsvButton" class="btn btn-outline-success" href="/export/csv">Eksport CSV</a>
            <a id="exportExcelButton" class="btn btn-outline-success" href="/export/excel">Eksport Excel</a>
            <a id="backupDbButton" class="btn btn-outline-secondary" href="/backup/db">Backup DB</a>
            <button id="clearDatabaseButton" class="btn btn-outline-danger" @onclick="ShowClearDatabaseWarning">Ryd database</button>
        </div>
    </div>

    <div class="row g-3 mb-3">
        <div class="col-12 col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body py-3">
                    <div class="text-muted small">Åbne paller</div>
                    <div class="fs-3 fw-semibold">@openPallets.Count</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body py-3">
                    <div class="text-muted small">Åbne kolli</div>
                    <div class="fs-3 fw-semibold">@openPallets.Sum(p => p.TotalQuantity)</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body py-3">
                    <div class="text-muted small">Afventer scan</div>
                    <div class="fs-3 fw-semibold">@entries.Sum(e => Math.Max(0, e.Quantity - e.ConfirmedQuantity))</div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm mb-3">
        <div class="card-header bg-body fw-semibold">Database restore</div>
        <div class="card-body">
            <div class="row g-2 align-items-end">
                <div class="col-12 col-md-8">
                    <label class="form-label">Vælg backupfil (.db)</label>
                    <InputFile OnChange="OnRestoreFileSelected" accept=".db,.sqlite,.sqlite3" />
                </div>
                <div class="col-12 col-md-4 d-grid">
                    <button id="restoreDbButton" class="btn btn-outline-warning" disabled="@(!CanRestoreDatabase)" @onclick="RestoreDatabaseAsync">Gendan database</button>
                </div>
            </div>
            @if (!string.IsNullOrWhiteSpace(selectedRestoreFileName))
            {
                <div class="small text-muted mt-2">Valgt fil: @selectedRestoreFileName</div>
            }
        </div>
    </div>

    @if (showClearDatabaseWarning)
    {
        <div class="alert alert-danger d-flex flex-wrap align-items-center gap-2" role="alert">
            <strong>Advarsel:</strong> Dette sletter alle paller og registreringer permanent.
            <button id="clearConfirmButton" class="btn btn-sm btn-danger" @onclick="ClearDatabaseAsync">Ja, ryd database</button>
            <button id="clearCancelButton" class="btn btn-sm btn-outline-secondary" @onclick="CancelClearDatabase">Annuller</button>
        </div>
    }

    @if (!string.IsNullOrWhiteSpace(statusMessage))
    {
        <div class="alert @statusCss mb-3" role="alert">@statusMessage</div>
    }

    <div class="row g-3 mb-3">
        <div class="col-12 col-lg-7">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-body fw-semibold">Trin 1: Registrer kolli</div>
                <div class="card-body">
                    <EditForm Model="form" OnValidSubmit="RegisterColliAsync">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="row g-3">
                            <div class="col-12 col-md-5">
                                <label class="form-label">Varenummer</label>
                                <InputText id="productInput" class="form-control form-control-lg" @bind-Value="form.ProductNumber" />
                            </div>
                            <div class="col-12 col-md-4">
                                <label class="form-label">Holdbarhed (YYYYMMDD)</label>
                                <InputText id="expiryInput" class="form-control form-control-lg" @bind-Value="form.ExpiryDateRaw" />
                            </div>
                            <div class="col-12 col-md-3">
                                <label class="form-label">Antal kolli</label>
                                <InputNumber id="quantityInput" class="form-control form-control-lg" @bind-Value="form.Quantity" />
                            </div>
                            <div class="col-12 d-flex flex-wrap gap-2 align-items-center">
                                <button id="registerButton" class="btn btn-primary btn-lg px-4" type="submit">Registrer</button>
                                <div class="form-check ms-md-2">
                                    <InputCheckbox id="keepExpiryInput" class="form-check-input" @bind-Value="keepExpiryBetweenScans" />
                                    <label class="form-check-label" for="keepExpiryInput">Behold holdbarhed til næste scan</label>
                                </div>
                            </div>
                        </div>
                    </EditForm>

                    @if (!string.IsNullOrWhiteSpace(lastSuggestedPalletId))
                    {
                        <div class="alert alert-primary d-flex flex-wrap align-items-center gap-2 mt-3 mb-0" role="alert">
                            <span class="badge text-bg-primary">Foreslået palle</span>
                            <strong>@lastSuggestedPalletId</strong>
                            <a class="btn btn-sm btn-outline-primary ms-sm-auto" href="@($"/print-label/{lastSuggestedPalletId}")" target="_blank">Print label</a>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-5">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-body fw-semibold">Trin 2: Bekræft flyt</div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label">Scan palle-stregkode</label>
                            <InputText id="palletScanInput" class="form-control form-control-lg" @bind-Value="scannedPalletCode" />
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label">Antal at bekræfte</label>
                            <InputNumber id="confirmCountInput" class="form-control form-control-lg" @bind-Value="confirmScanCount" />
                        </div>
                        <div class="col-12 col-md-6 d-grid">
                            <label class="form-label opacity-0">Bekræft</label>
                            <button id="confirmMoveButton" class="btn btn-outline-primary btn-lg" @onclick="ConfirmMoveAsync">Bekræft flyt</button>
                        </div>
                    </div>
                    <div class="mt-3 small text-muted">
                        Genveje: <code>Alt+1</code> vare, <code>Alt+2</code> palle-scan, <code>Alt+R</code> registrer, <code>Alt+B</code> bekræft, <code>Alt+U</code> fortryd, <code>Esc</code> annuller advarsel.
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-12 col-xxl-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center gap-2 bg-body">
                    <span class="fw-semibold">Åbne paller</span>
                    <span class="badge text-bg-secondary">@openPallets.Count stk</span>
                </div>
                <div class="table-responsive">
                    <table class="table align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Palle</th>
                                <th>Varenummer</th>
                                <th>Holdbarhed</th>
                                <th>Kolli</th>
                                <th class="text-end">Handling</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (openPallets.Count == 0)
                            {
                                <tr>
                                    <td colspan="5" class="text-muted">Ingen åbne paller endnu.</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var pallet in openPallets)
                                {
                                    <tr>
                                        <td class="fw-semibold">@pallet.PalletId</td>
                                        <td>@pallet.ProductNumber</td>
                                        <td>@pallet.ExpiryDate</td>
                                        <td>@pallet.TotalQuantity</td>
                                        <td class="text-end">
                                            <div class="d-inline-flex flex-wrap gap-1 justify-content-end">
                                                <a class="btn btn-sm btn-outline-primary" href="@($"/print-label/{pallet.PalletId}")" target="_blank">Label</a>
                                                <a class="btn btn-sm btn-outline-dark" href="@($"/print-pallet-contents/{pallet.PalletId}")" target="_blank">Indhold</a>
                                                <button class="btn btn-sm btn-primary" @onclick="() => CloseAndPrintContentsAsync(pallet.PalletId)">Luk + print</button>
                                                <button class="btn btn-sm btn-outline-secondary" @onclick="() => ClosePalletAsync(pallet.PalletId)">Luk</button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-12 col-xxl-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center bg-body">
                    <span class="fw-semibold">Seneste registreringer</span>
                    <button id="undoLastButton" class="btn btn-sm btn-outline-danger" disabled="@(entries.Count == 0)" @onclick="UndoLastAsync">Fortryd seneste</button>
                </div>
                <div class="table-responsive">
                    <table class="table align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Tid</th>
                                <th>Vare</th>
                                <th>Dato</th>
                                <th>Kolli</th>
                                <th>Palle</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (entries.Count == 0)
                            {
                                <tr>
                                    <td colspan="6" class="text-muted">Ingen registreringer endnu.</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var entry in entries)
                                {
                                    <tr>
                                        <td>@entry.Timestamp.ToLocalTime().ToString("HH:mm:ss")</td>
                                        <td>@entry.ProductNumber</td>
                                        <td>@entry.ExpiryDate</td>
                                        <td>@entry.Quantity</td>
                                        <td>@entry.PalletId</td>
                                        <td>
                                            @if (entry.ConfirmedMoved)
                                            {
                                                <span class="badge text-bg-success">Bekræftet (@entry.ConfirmedQuantity/@entry.Quantity)</span>
                                            }
                                            else
                                            {
                                                <span class="badge text-bg-warning">Afventer (@entry.ConfirmedQuantity/@entry.Quantity)</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm mt-3">
        <div class="card-header bg-body fw-semibold">Audit log (seneste 10)</div>
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Tid</th>
                        <th>Handling</th>
                        <th>Detaljer</th>
                        <th>Maskine</th>
                    </tr>
                </thead>
                <tbody>
                    @if (auditEntries.Count == 0)
                    {
                        <tr>
                            <td colspan="4" class="text-muted">Ingen audit entries endnu.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var audit in auditEntries)
                        {
                            <tr>
                                <td>@audit.Timestamp.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td>@audit.Action</td>
                                <td>@audit.Details</td>
                                <td>@audit.MachineName</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
