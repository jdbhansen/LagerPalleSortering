<div class="row g-3 mb-3">
    <div class="col-12 col-lg-7">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-body fw-semibold">Trin 1: Registrer kolli</div>
            <div class="card-body">
                <EditForm Model="RegistrationForm" OnValidSubmit="HandleRegisterSubmitAsync">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="row g-3">
                        <div class="col-12 col-md-5">
                            <label class="form-label">Varenummer</label>
                            <InputText id="productInput" class="form-control form-control-lg" @bind-Value="RegistrationForm.ProductNumber" />
                        </div>
                        <div class="col-12 col-md-4">
                            <label class="form-label">Holdbarhed (YYYYMMDD)</label>
                            <InputText id="expiryInput" class="form-control form-control-lg" @bind-Value="RegistrationForm.ExpiryDateRaw" />
                        </div>
                        <div class="col-12 col-md-3">
                            <label class="form-label">Antal kolli</label>
                            <InputNumber id="quantityInput" class="form-control form-control-lg" @bind-Value="RegistrationForm.Quantity" />
                        </div>
                        <div class="col-12 d-flex flex-wrap gap-2 align-items-center">
                            <button id="registerButton" class="btn btn-primary btn-lg px-4" type="submit">Registrer</button>
                            <div class="form-check ms-md-2">
                                <InputCheckbox id="keepExpiryInput" class="form-check-input" @bind-Value="KeepExpiryBetweenScans" />
                                <label class="form-check-label" for="keepExpiryInput">Behold holdbarhed til næste scan</label>
                            </div>
                        </div>
                    </div>
                </EditForm>

                @if (!string.IsNullOrWhiteSpace(LastSuggestedPalletId))
                {
                    <div class="alert alert-primary d-flex flex-wrap align-items-center gap-2 mt-3 mb-0" role="alert">
                        <span class="badge text-bg-primary">Foreslået palle</span>
                        <strong>@LastSuggestedPalletId</strong>
                        <a class="btn btn-sm btn-outline-primary ms-sm-auto" href="@($"/print-label/{LastSuggestedPalletId}")" target="_blank">Print label</a>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-12 col-lg-5">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-body fw-semibold">Trin 2: Bekræft flyt</div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-12">
                        <label class="form-label">Scan palle-stregkode</label>
                        <InputText id="palletScanInput" class="form-control form-control-lg" @bind-Value="ScannedPalletCode" @bind-Value:event="oninput" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label">Antal at bekræfte</label>
                        <InputNumber id="confirmCountInput" class="form-control form-control-lg" @bind-Value="ConfirmScanCount" />
                    </div>
                    <div class="col-12 col-md-6 d-grid">
                        <label class="form-label opacity-0">Bekræft</label>
                        <button id="confirmMoveButton" class="btn btn-outline-primary btn-lg" @onclick="HandleConfirmMoveAsync">Bekræft flyt</button>
                    </div>
                </div>
                <div class="mt-3 small text-muted">
                    Genveje: <code>Alt+1</code> vare, <code>Alt+2</code> palle-scan, <code>Alt+R</code> registrer, <code>Alt+B</code> bekræft, <code>Alt+U</code> fortryd, <code>Esc</code> annuller advarsel.
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public HomeFormModel RegistrationForm { get; set; } = default!;

    [Parameter]
    public string ScannedPalletCode { get; set; } = string.Empty;

    [Parameter]
    public EventCallback<string> ScannedPalletCodeChanged { get; set; }

    [Parameter]
    public int ConfirmScanCount { get; set; } = 1;

    [Parameter]
    public EventCallback<int> ConfirmScanCountChanged { get; set; }

    [Parameter]
    public bool KeepExpiryBetweenScans { get; set; }

    [Parameter]
    public EventCallback<bool> KeepExpiryBetweenScansChanged { get; set; }

    [Parameter]
    public string? LastSuggestedPalletId { get; set; }

    [Parameter]
    public EventCallback OnRegisterColli { get; set; }

    [Parameter]
    public EventCallback OnConfirmMove { get; set; }

    private Task HandleRegisterSubmitAsync() => OnRegisterColli.InvokeAsync();

    private Task HandleConfirmMoveAsync() => OnConfirmMove.InvokeAsync();
}
